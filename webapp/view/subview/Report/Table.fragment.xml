<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:u="sap.uxap"
	xmlns:tnt="sap.tnt">
	<!--<ScrollContainer height="350px" vertical="true">-->
	<Toolbar>
		<Title text="Claim Requests" level="H3"/>
		<ToolbarSpacer/>
		<Button id="exportExcel" press="onDataExport" icon="sap-icon://excel-attachment" text="Download" type="Transparent"/>
	</Toolbar>
	<ScrollContainer width="100%" horizontal="true" vertical="false" focusable="true">
		<Table id="idClaimRequestsTable" showNoData="true" noDataText="No Data Retrieved" inset="false" growing="true" growingThreshold="30"
			growingScrollToLoad="true" itemPress="onPressRequestItem" sticky="ColumnHeaders,HeaderToolbar" selectionChange="onSelectRequestItem"
			items="{ path: 'EclaimSrvModel>/EclaimRequestViews', sorter: { path: 'DRAFT_ID', descending: true}, parameters:{expand : 'MasterClaimTypeDetails,EclaimsItemDataDetails,StatusConfigDetails'},templateShareable:true}">
			<columns>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Label design="Bold" text="Claim No." class="tableDataTextSize"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Label design="Bold" text="Year"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Label design="Bold" text="Claim Month"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
					<Label design="Bold" text="Claim Type"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet">
					<Label design="Bold" text="Claim Status"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet">
					<Label design="Bold" text="Staff No."/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet">
					<Label design="Bold" text="Staff Name"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="ULU Code"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="ULU Name"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="FDLU Code"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="FDLU Name"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Employee Group" wrapping="true"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet">
					<Label design="Bold" text="Date Joined"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet">
					<Label design="Bold" text="Week No."/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Start Date"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="End Date"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Day"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Start Time"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="End Time"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Hours"/>
				</Column>
				<!--<Column hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">-->
				<!--	<Label design="Bold" text="Unit (Applicable for Per Unit Rate)"/>-->
				<!--</Column>-->
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="PH"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Day Type"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Opt For Comp."/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="WBS"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Claim Item Remarks"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Submitted on"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Submitted by"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Verified on"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Verified Staff ID"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Verified By"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="AP1 Staff ID"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Additional Approver 1"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Additional Approver 1 approved on"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="AP2 Staff ID"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Additional Approver 2"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Additional Approver 2 approved on"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Approved on"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Approver Staff ID"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Approved by"/>
				</Column>
				<!--<Column hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">-->
				<!--	<Label design="Bold" text="Claim Status"/>-->
				<!--</Column>-->
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="CA Remarks"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Verifier Remarks"/>
				</Column>
				<Column width="10rem" hAlign="Left" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline">
					<Label design="Bold" text="Approver Remarks"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem type="Active" press="onPressPreviewClaimRequest">
					<cells>
						<!--<ObjectIdentifier title="{= ${EclaimSrvModel>STATUS_CODE} === '01' ? 'Draft' : ${EclaimSrvModel>REQUEST_ID} }"/>-->
						<Text text="{= ${EclaimSrvModel>STATUS_CODE} === '01' ? 'Draft' : ${EclaimSrvModel>REQUEST_ID} }" class="tableDataTextSize"/>
						<Text text="{EclaimSrvModel>CLAIM_YEAR}"/>
						<Text text="{EclaimSrvModel>CLAIM_MONTH}"/>
						<Text text="{EclaimSrvModel>CLAIM_TYPE_T}"/>
						<tnt:InfoLabel text="{EclaimSrvModel>STATUS_ALIAS}" tooltip="{ClaimRequestHistory>statusDisplay}"
							colorScheme="{EclaimSrvModel>STATUS_COLOR_CODE}" displayOnly="false"/>
						<Text text="{EclaimSrvModel>STAFF_ID}"/>
						<Text text="{EclaimSrvModel>FULL_NM}"/>
						<!--<VBox>-->
						<Text text="{EclaimSrvModel>ULU}"/>
						<Text text="{EclaimSrvModel>ULU_T}"/>
						<Text text="{EclaimSrvModel>FDLU}"/>
						<Text text="{EclaimSrvModel>FDLU_T}"/>
						<!--</VBox>-->
						<Text text="{EclaimSrvModel>EMP_GP_T}"/>
						<Text text="{ path: 'EclaimSrvModel>DATE_JOINED', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'yyyy-MM-dd' } }"/>
						<Text text="{EclaimSrvModel>CLAIM_WEEK_NO}"/>
						<!--<Text text="{EclaimSrvModel>RATE_DESC}"/>-->
						<Text text="{EclaimSrvModel>CLAIM_START_DATE}"/>
						<Text text="{EclaimSrvModel>CLAIM_END_DATE}"/>
						<Text text="{EclaimSrvModel>CLAIM_DAY}"/>
						<Text text="{EclaimSrvModel>START_TIME}"/>
						<Text text="{EclaimSrvModel>END_TIME}"/>
						<Text text="{EclaimSrvModel>HOURS_UNIT}"/>
						<Text text="{= ${EclaimSrvModel>IS_PH} === 2 ? 'X' : '' }"/>
						<Text text="{EclaimSrvModel>CLAIM_DAY_TYPE}"/>
						<CheckBox selected="{= ${EclaimSrvModel>IS_PH} === 5 }" enabled="false"/>
						<Text text="{EclaimSrvModel>WBS}"/>
						<Text text="{EclaimSrvModel>REMARKS}"/>
						<!--<Text text="{EclaimSrvModel>SUBMITTED_ON}"/>-->
						<Text text="{ path: 'EclaimSrvModel>CREATED_ON', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'yyyy-MM-dd' } }"/>
						<Text text="{EclaimSrvModel>SUBMITTED_BY}"/>
						<!--<Text text="{EclaimSrvModel>VERIFIED_ON}"/>-->
						<Text text="{ path: 'EclaimSrvModel>VERIFIED_ON', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'yyyy-MM-dd' } }"/>
						<Text text="{EclaimSrvModel>VERIFIER_STAFF_ID}"/>
						<Text text="{EclaimSrvModel>VERIFIER_STAFF_FULL_NAME}"/>
						<Text text="{EclaimSrvModel>ADD_APP_1_STAFF_ID}"/>
						<Text text="{EclaimSrvModel>ADD_APP_1_STAFF_FULL_NAME}"/>
						<!--<Text text="{EclaimSrvModel>ADD_APRV_1_ON}"/>-->
						<Text text="{ path: 'EclaimSrvModel>ADD_APRV_1_ON', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'yyyy-MM-dd' } }"/>
						<Text text="{EclaimSrvModel>ADDITIONAL_APP_2_STAFF_ID}"/>
						<Text text="{EclaimSrvModel>ADDITIONAL_APP_2_STAFF_FULL_NAME}"/>
						<!--<Text text="{EclaimSrvModel>ADD_APRV_2_ON}"/>-->
						<Text text="{ path: 'EclaimSrvModel>ADD_APRV_2_ON', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'yyyy-MM-dd' } }"/>
						<!--<Text text="{EclaimSrvModel>APPROVED_ON}"/>-->
						<Text text="{ path: 'EclaimSrvModel>APPROVED_ON', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'yyyy-MM-dd' } }"/>
						<Text text="{EclaimSrvModel>APPROVED_BY}"/>
						<Text text="{EclaimSrvModel>APPROVER_STAFF_FULL_NAME}"/>
						<Text text="{EclaimSrvModel>CA_REMARKS}"/>
						<Text text="{EclaimSrvModel>VERIFIER_REMARKS}"/>
						<Text text="{EclaimSrvModel>APP_REMARKS}"/>
						<!--<Text-->
						<!--	text="{parts:[{path: 'EclaimSrvModel>CLAIM_MONTH'}, {path: 'EclaimSrvModel>CLAIM_YEAR'}], formatter : '.formatter.convertMonthcodeToName'}"/>-->
						<!--<VBox>-->
						<!--	<Text text="{ path: 'EclaimSrvModel>CREATED_ON', type: 'sap.ui.model.type.DateTime', formatOptions: { pattern: 'd MMM, yyyy HH:mm:ss' } }"/>-->
						<!--	<Text text="{ path: 'EclaimSrvModel>SUBMITTED_BY_NID'}"/>-->
						<!--</VBox>-->
						<!--<Button icon="sap-icon://instance" press="onPressProcessInstance"/>-->
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</ScrollContainer>
	<!--</ScrollContainer>-->
</core:FragmentDefinition>